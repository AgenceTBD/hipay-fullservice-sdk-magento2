{
    "name":"hipay/hipay-fullservice-sdk-magento2",
    "description":"HiPay fullservice Magento2 module",
    "type":"magento2-module",
    "version":"1.0.1",
    "license":[
        "MIT"
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:hipay/hipay-fullservice-sdk-php.git"
        }
    ],
    "require":{
        "php":"~5.5.0|~5.6.0|~7.0.0",
        "hipay/hipay-fullservice-sdk-php":"dev-develop"
    },
    "extra": {
       "map": [
		        [
		         "src/*",
		         "Hipay/FullserviceMagento"
		        ],
		        [
		         "tests/functional/tests/app/*",
		         "dev/tests/functional/test/app/"
		        ]
              ]
     },
     "scripts": {
        "post-package-install": [
            "php -r \"copy('tests/functional/tests/app/*', '/../../../dev/tests/functional/test/app/');\""
        ]
    },
     "autoload": {
        "psr-4": {
            "HiPay\\": "tests/functional/tests/app/HiPay/"
        }
    },
     "archive":{
         "exclude": ["/*","!/src"]
     },
     "minimum-stability": "alpha"
}
